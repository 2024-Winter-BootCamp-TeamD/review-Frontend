{
  "manifest_version": 3,
  "name": "REFACTORY",
  "version": "1.2",
  "description": "GitHub 코드 리뷰를 위한 AI 어시스턴트",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": [
    "https://github.com/*",
    "https://refactory.store:8000/*",
    "http://refactory.store:8000/*",
    "https://refactory.store/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "120": "icons/logo120.png"
    }
  },
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "120": "icons/logo120.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "static/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
